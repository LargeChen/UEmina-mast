page {
  background-color: white;
}

/* 图片轮播 */
swiper {
  width: 380rpx;
  height: 380rpx;
  margin: 30rpx 185rpx 60rpx 185rpx;

  border-radius: 380rpx;

  /*background-color: #fbfbfb;*/
}

swiper-item image {
  width: 380rpx;
  height: 380rpx;
  border-radius: 380rpx;
}

.top {
  height: 122rpx;
  position: relative;
}

.top .name {
  height: 40rpx;
  font-size: 40rpx;
  line-height: 1;

  position: absolute;
  top: 0;
  left: 30rpx;
}

.top .description {
  height: 32rpx;
  font-size: 32rpx;
  line-height: 1;

  color: #888888;

  position: absolute;
  bottom: 32rpx;
  left: 30rpx;
}

.top .price {
  height: 40rpx;
  font-size: 40rpx;
  line-height: 1;

  color: #f5a422;

  position: absolute;
  top: 0;
  right: 30rpx;
}

.top .inventory {
  height: 28rpx;
  font-size: 32rpx;
  line-height: 0.88;

  color: #b2b2b2;

  position: absolute;
  bottom: 32rpx;
  right: 30rpx;
}

/* 标题 */
.header {
  height: 100rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: 500;
  letter-spacing: 6rpx;

  text-align: center;

  padding-top: 40rpx;

  box-sizing: border-box;
}

.attribute {
  height: 80rpx;
  font-size: 32rpx;
  line-height: 32rpx;

  color: #888888;

  padding: 30rpx 24rpx;

  box-sizing: border-box;
}

.detail-imgs {
  padding: 20rpx 30rpx;
}

.bottom-margin {
  height: 120rpx;
  width: 100%;

  background-color: transparent;
}

.bottom {
  height: 120rpx;
  width: 100%;

  background-color: white;

  position: fixed;
  left: 0;
  bottom: 0;
}

.bottom .cart-img {
  width: 54rpx;
  height: 44rpx;

  position: absolute;
  top: 38rpx;
  left: 28rpx;
}

.bottom .num {
  width: 34rpx;
  height: 34rpx;

  border-radius: 34rpx;

  opacity: 0.5;
  background-color: #b2b2b2;

  font-size: 24rpx;
  line-height: 34rpx;
  color: white;

  text-align: center;

  position: absolute;
  top: 21rpx;
  left: 91rpx;
}

.bottom .orange {
  opacity: 1;
  background-color: #faae20;
}

.bottom .add {
  width: 540rpx;
  height: 76rpx;

  position: absolute;
  right: 30rpx;
  top: 22rpx;
}

