/* 和选择优惠券相关的 */
.button.no-select {
  width: 540rpx;
  height: 76rpx;

  margin: 22rpx auto;

  background-image: url("/images/btn_long.png");
  background-size: 100% 100%;
  text-align: center;
  font-size: 38rpx;
  line-height: 76rpx;
  color: #f8f8f7;
  filter: grayscale(100%);
}


.coupon.selected {
  border-top: 1rpx double #f77323;
  border-right: 1rpx double #f77323;
  border-bottom: 1rpx double #f77323;
}