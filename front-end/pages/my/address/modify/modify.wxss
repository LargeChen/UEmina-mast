.commit {
  width: 100%;

  display: flex;
  justify-content: center;

  margin-top: 42rpx;
}

.commit > image {
  height: 112rpx;
  width: 564rpx;
}


.select-as-default {
  height: 50rpx;
  width: 750rpx;

  margin-top: 10rpx;
}

.select-as-default .box {
  height: 40rpx;
  width: 40rpx;
  border-radius: 40rpx;

  margin: 5rpx;
  
  border: 5rpx solid #fab027;

  box-sizing: border-box;

  line-height: 40rpx;
  font-size: 34rpx;
  text-align: center;

  float: right;
}

.select-as-default .box.checked {
  border: none;
  background-color: #fab027;
  color: white;
}

.select-as-default .text {
  height: 40rpx;
  margin: 5rpx 30rpx 5rpx 10rpx;

  line-height: 40rpx;
  font-size: 36rpx;
  letter-spacing: 1.3rpx;

  color: #404040;

  float: right;
}