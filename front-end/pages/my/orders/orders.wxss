.order {
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;

  background-color: white;

  box-sizing: border-box;
}

.order-time {
  height: 28rpx;
  padding-top: 30rpx;
  padding-bottom: 10rpx;

  font-size: 28rpx;
  line-height: 28rpx;

  color: #b2b2b2;
}

.address {
  height: 144rpx;
  width: 100%;

  position: relative;
}


.address .position {
  height: 32rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #353535;

  position: absolute;
  top: 34rpx;
  left: 0;
}

.address .person {
  height: 32rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #888888;

  position: absolute;
  bottom: 34rpx;
  left: 0;
}

.ui.divider.dp {
  margin-bottom: 30rpx;
}

.products > .product {
  height: 32rpx;
  width: 100%;

  padding-bottom: 30rpx;
  padding-right: 30rpx;
  /*box-sizing: border-box;*/

  font-size: 32rpx;
  line-height: 32rpx;
  color: #353535;
}

text.right {
  float: right;
}

.fare {
  /* height: 144rpx; */
  width: 100%;
}

.fare .transport-fare,
.fare .coupon-fare
 {
  height: 32rpx;

  font-size: 32rpx;
  line-height: 32rpx;

  color: #888888;
  margin: 10rpx 0;
}

.fare .total-fare {
  height: 32rpx;
  width: 100%;

  padding-top: 10rpx;
  padding-bottom: 30rpx;

  line-height: 32rpx;
  font-size: 32rpx;

  color: #353535;

  text-align: right;
}

.fare .price {
  color: #f5a422;
}


/* new：配送时间  */
.deliver-time {
  height: 28rpx;
  padding-bottom: 10rpx;

  font-size: 28rpx;
  line-height: 28rpx;

  color: #b2b2b2;
}

.note {
  height: 28rpx;
  padding-bottom: 30rpx;

  font-size: 28rpx;
  line-height: 28rpx;

  color: #b2b2b2;
}